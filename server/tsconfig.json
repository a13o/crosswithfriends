{
  "compilerOptions": {
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "paths": {
      "@shared/*": ["../src/shared/*"],
      "@lib/*": ["../src/lib/*"]
    }
  },
  "include": [".", "../src/lib", "../src/shared"]
}
