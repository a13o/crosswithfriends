# PostgreSQL connection
PGDATABASE=dfac
PGUSER=postgres
PGPASSWORD=your_password_here
PGHOST=localhost
PGPORT=5432
# DATABASE_URL is optional — only needed for production or backfill scripts.
# If set, it takes precedence over the individual PG* variables above.
#DATABASE_URL=postgresql://postgres:your_password_here@localhost:5432/dfac

NODE_ENV=development

# JWT signing secret (any random string)
JWT_SECRET=change_me_to_a_random_secret

# Google OAuth (optional — needed for Google login)
# Create credentials at https://console.cloud.google.com/apis/credentials
#GOOGLE_CLIENT_ID=
#GOOGLE_CLIENT_SECRET=
#GOOGLE_CALLBACK_URL=http://localhost:3021/api/auth/google/callback

# SendGrid (optional — needed for email verification)
#SENDGRID_API_KEY=
#MAIL_FROM=noreply@crosswithfriends.com

# Frontend URL (for email links)
APP_URL=http://localhost:3020
